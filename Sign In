
print ("""Welcome to Movin\'s bank\nType your name to sign in""")


user_name = input("Name: ")
passpin = input("PIN: ")
c_passpin = passpin  
# Correct PIN for demonstration purposes
login_attempts = 0
max_attempts = 5


if login_attempts < max_attempts:
    if passpin == c_passpin:
        print("Access granted. Welcome " + user_name + "!")
    else:
        for attempt in range(max_attempts):
            login_attempts += 1
            print(f"Try Again. You have {max_attempts - login_attempts} attempts left.")
            user_name = input("Name: ")
            passpin = input("PIN: ")
            if passpin == c_passpin:
                print("Access granted. Welcome " + user_name + "!")
                break
            
            
if login_attempts == max_attempts:
                print("""Attempts limits reached.
                      Account locked for the next 12 hours.
                      Please contact customer support""")
else  :
    print("""If you encounter any issues logging in,
          Please contact customer support
          Welcome 2 Movin's BankðŸ˜""")